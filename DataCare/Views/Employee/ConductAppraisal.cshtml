@model DataCare.Models.Appraisal

@{
    ViewData["Title"] = "ConductAppraisal";
}

<h1>ConductAppraisal</h1>

<h4>Appraisal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SaveAppraisal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ObjectiveId" class="control-label"></label>
                <select asp-for="ObjectiveId" asp-items="ViewBag.Objectives" class="form-control"></select>
                <span asp-validation-for="ObjectiveId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AppraisalPeriodId" class="control-label"></label>
                <select asp-for="AppraisalPeriodId" asp-items="ViewBag.AppraisalPeriods" class="form-control"></select>
                <span asp-validation-for="AppraisalPeriodId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" asp-items="ViewBag.Employees" class="form-control"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="WorkflowStatus" class="control-label"></label>
                <select asp-for="WorkflowStatus" class="form-control">
                    <option value="Approved">Approved</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="WorkflowStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ApproverComment" class="control-label"></label>
                <textarea asp-for="ApproverComment" class="form-control" ></textarea>
                <span asp-validation-for="ApproverComment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
